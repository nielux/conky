conky.text = [[
${color5}[${color3}  CPU${color0} ${goto 205} ${cpu cpu0}%  ${color5}|${color3}  temp:${color0}  ${execi 10 sensors|grep 'Package id 0:'|awk -F"+" '{print $2}'|awk -F"." '{print $1}'}Â°C  ${color5}|${color3}  fan:${color0}  ${execi 5 sensors|grep 'fan1'|awk '{print $2}'}${goto 415} RPM  ${color5}][${color3}  MEM${color0} ${goto 660} ${memperc}%  ${color5}][${color3}  DISK${color0}  ${diskiograph sda 16,50 666666 ffffff -t}  ${color5}|${color3}  root${color0} ${goto 1008} ${fs_used_perc /}%  ${color5}|${color3}  kvm ${goto 1235} ${color0} ${fs_used_perc /var/lib/libvirt/images}%  ${color5}][${color3}  IP  lan: ${color0} ${addr wlp2s0}  ${color5}|${color3}  wan: ${color0}${execi 60 IP=`dig +short @208.67.222.222 myip.opendns.com`; if [ "${IP}" = ";; connection timed out; no servers could be reached" ]; then echo " n/a"; else echo " ${IP}"; fi}  ${color5}]
]];
