conky.config = {
-- Conky by Niels Baay
-- Conky settings --
	background = true,
	update_interval = 1,
	cpu_avg_samples = 2,
	net_avg_samples = 2,
	override_utf8_locale = true,
	double_buffer = true,

	-- Subtract file system -/+buffers/cache from used memory?
	-- Set to yes, to produce meaningful physical memory stats.
	no_buffers = true,

	text_buffer_size = 256,
	imlib_cache_size = 10,
	format_human_readable = true,

	-- Window specifications
	alignment = 'top_right',
	minimum_width = 280,
	minimum_height = 600,
	own_window = true,
	own_window_type = override,
	own_window_class = 'conky',
	own_window_transparent = true,
	own_window_argb_visual = true,
	own_window_argb_value = 30,
	own_window_hints = 'undecorated,sticky,skip_taskbar,skip_pager,below',
	own_window_title = 'nielux-windu',

	border_inner_margin = 0,
	border_outer_margin = 0,

	-- This determines the horizontal (x) and vertical (y) offset
	-- of the conky window
	gap_x = 35,
	-- gap_y = 50,
	gap_y = 35,

	out_to_console = false,
	out_to_stderr = false,
	extra_newline = false,

	-- Graphics settings
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = false,

	-- Text settings
	use_xft = true,
	font = 'Freesans:size=9',
	uppercase = false,
	temperature_unit = celsius,
	short_units = true,

	-- Colors
	color0 = 'ffffff', -- White
	color1 = '002b72', -- Navy
	color2 = 'ad0000', -- Red
	color3 = '666666', -- Grey
	color4 = 'ff9900', -- Orange
	color5 = 'bfff80', -- Light Green
	color6 = 'd36363', -- Light Red

	-- Lua load 
	lua_load = '~/.conky/conkyrc-nielux-xps15.lua',
	lua_draw_hook_pre = 'conky_main',
};

